<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="hintTextColor">@color/cor_primaria</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Text_view_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonLogin">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/cor_primaria</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="primary_text">
        <item name="android:textColor">@color/cor_primaria</item>
    </style>

    <style name="secondary_text">
        <item name="android:textColor">@color/white</item>
    </style>
    
</resources>